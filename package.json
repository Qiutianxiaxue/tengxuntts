{
  "name": "tencent-tts-api",
  "version": "1.0.0",
  "description": "腾讯云TTS文本转语音服务API",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "watch": "nodemon --exec ts-node src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t tencent-tts-api .",
    "docker:run": "docker run -p 35000:35000 --env-file .env.docker tencent-tts-api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:deploy": "docker-compose up -d --build"
  },
  "keywords": [
    "tts",
    "tencent",
    "text-to-speech",
    "nodejs",
    "typescript"
